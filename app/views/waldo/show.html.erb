<div class="row">

	<section id="header" class="col-xs-12 text-center">
		<h2>Welcome to Where's Waldo!</h2>
		<p>Click anywhere on the image to highlight where the characters are. Click 'How to Play' for more info.</p>
		<div class="col-sm-6">
			<button type="button" class="btn btn-primary pull-right" data-container="body" data-toggle="popover" data-placement="bottom" data-content="<%= render partial: "how_to_play" %>">
			How to Play
			</button>
		</div>
		<div class="col-sm-6">
			<%= button_to "Restart Game", session_path, method: :delete, class: "btn btn-warning pull-left" %>
		</div>

		<div class="col-sm-12">
			<h1>
				Timer: 
				<time id="timer">
					<span id="hours"><%= @hours %></span>:
					<span id="minutes"><%= @minutes %></span>:
					<span id="seconds"><%= @seconds %></span>
				</time>
			</h1>
		</div>
	</section>

	<section id="waldo-image" class="col-xs-12">
		
		<!-- Display the Waldo image -->
		<%= image_tag "waldo" %>

	</section>
	<!-- END Waldo Image -->

</div>
<!-- END Row -->